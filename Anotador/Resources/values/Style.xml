<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="titleTextColor">@color/letterPrimary</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  
  <!-- Estilos que se van a usar en la app -->
  <!-- Layouts -->
  <style name="layout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>
  <style name="layout.v">
    <item name="android:orientation">vertical</item>
  </style>
  <style name="layout.h">
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="layout_Activity" parent="layout.v">
    <item name="android:padding">15dp</item>
  </style>
  
  <style name="layout_Registro">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="layout_Registro.v">
    <item name="android:orientation">vertical</item>
  </style>
  <style name="layout_Registro.h">
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="layout_FAB" parent="layout_Registro.h">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_alignParentBottom">true</item>
  </style>

  <!-- Spinners -->
  <style name="spinner">
    <item name="android:textColor">@color/textColor</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- EditTexts -->
  <style name="editText">
    <item name="android:inputType">textPersonName</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="editText3" parent="editText">
    <item name="android:inputType">number</item>
    <item name="android:digits">-0123456789</item>
  </style>

  <style name="editText2">
    <item name="android:inputType">number</item>
    <item name="android:textSize">16dp</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:digits">-0123456789</item>
    <item name="android:editable">false</item>
    <item name="android:focusable">false</item>
    <item name="android:gravity">center</item> 
  </style>
  
  <!-- TextViews -->
  <style name="textView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">14dp</item>
    <item name="android:textColor">@color/textColor</item>
    <item name="android:gravity">center</item>
  </style>
  
  <!-- TextInputLayouts -->
  <style name="textInputLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="textInputSpinner" parent="TextAppearance.AppCompat.Caption">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
  </style>
 
  <!-- ListViews -->
  <style name="listView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <!-- Buttons -->
  <style name="button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/letterPrimary</item>
    <item name="android:background">@drawable/button_background</item>
  </style>
  
  <!-- FAB's -->
  <style name="fab">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">bottom|end</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:layout_marginRight">16dp</item>
  </style>

  <!-- Images -->
  <style name="image">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
</resources>